<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="@dimen/search_poster_width"
        android:layout_height="@dimen/search_poster_height"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/search_poster_margin_start"
        android:layout_marginEnd="@dimen/search_poster_margin_end"/>

    <TextView
        android:id="@+id/tile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingRight="5dp" />

</LinearLayout>